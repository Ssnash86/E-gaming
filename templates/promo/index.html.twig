{% extends 'base.html.twig' %}

{% block title %}Jeux en promo
{% endblock %}

{% block body %}
	<main class=" ">
	<h1 class="text-4xl text-white underline underline-offset-8 p-8">Nos jeux en promo : </h1>
		<section class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4 m-[3%]">
			{% for jeux_promos in jeux_promo %}
