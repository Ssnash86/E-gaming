							<a href="{{path('app_jeux_description',{id:jeux_promos.id})}}">
								<h5 class="mb-2 text-2xl font-bold tracking-tight text-gray-900 dark:text-white text-center underline">{{jeux_promos.nom}}</h5>
							</a>
							<p class="h-48 flex mb-3 font-normal text-gray-700 dark:text-gray-400 text-center items-center">{{jeux_promos.description}}</p>
							<div class="flex justify-between items-center gap-4 relative -bottom-2 ">
								<a href="{{path('app_jeux_description',{id:jeux_promos.id})}}" class=" flex gap-2 items-center px-3 py-2 text-sm font-medium text-center text-white bg-[#f95652] rounded-lg hover:bg-[#2e2e2e] focus:ring-4 focus:outline-none focus:ring-blue-300 ">
