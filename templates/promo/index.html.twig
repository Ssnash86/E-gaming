						<div class="card ">
							<div class="wrapper">
								<img src="{{jeux_promos.img ? asset('img/' ~ jeux_promos.img)}}" class="cover-image"/>
							</div>
							<img src="{{jeux_promos.img3d ? asset('img/' ~ jeux_promos.img3d)}}" class="character"/>
						</div>
