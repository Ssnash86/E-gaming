{# tailwindcss Sliding pagination control implementation #}
{% if pageCount > 1 %}
	<div class="inline-block ">
		<div class="flex items-baseline flex-row rounded-sm w-auto shadow-md ">
			{# {% if first is defined and current != first %}
				<a href="{{ path(route, query|merge({(pageParameterName): first})) }}" aria-label="Première page">
					<span class="bg-[#f95652] text-indigo-600 px-3 py-2 text-lg border-r hover:text-black">
						⏪
					</span>
				</a>
			{% endif %} #}

			{% if previous is defined %}
				<a class="flex self-center bg-[#f95652] p-2 h-10 w-10 rounded-full mx-2" rel="prev" href="{{ path(route, query|merge({(pageParameterName): previous})) }}" aria-label="Page précédente">
						<svg class=" text-indigo-600 text-lg  hover:text-black  w-full h-full fill-[white]" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 512 512"><!--!Font Awesome Free 6.6.0 by @fontawesome - https://fontawesome.com License - https://fontawesome.com/license/free Copyright 2024 Fonticons, Inc.--><path d="M48 256a208 208 0 1 1 416 0A208 208 0 1 1 48 256zm464 0A256 256 0 1 0 0 256a256 256 0 1 0 512 0zM256 128l-32 0L96 256 224 384l32 0 0-80 128 0 0-96-128 0 0-80z"/></svg>
				</a>
			{% endif %}

			{% for page in pagesInRange %}
				{% if page != current %}
					<a class="h-10 w-10" href="{{ path(route, query|merge({(pageParameterName): page})) }}" aria-label="page {{ page }}">
						<span class="bg-[#f95652] h-10 w-10 text-white px-3 py-2 text-lg border-r hover:text-black">
							{{ page }}
						</span>
					</a>
				{% else %}
					<span class="bg-white text-[#f95652] px-3 py-2 text-lg border-r font-bold">{{ page }}</span>
				{% endif %}
			{% endfor %}

			{% if next is defined %}
				<a rel="next" class="flex self-center bg-[#f95652] p-2 h-10 w-10 rounded-full mx-2" href="{{ path(route, query|merge({(pageParameterName): next})) }}" aria-label="Page suivante">
						<svg class=" text-indigo-600 text-lg  hover:text-black  w-full h-full fill-[white]" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 512 512"><!--!Font Awesome Free 6.6.0 by @fontawesome - https://fontawesome.com License - https://fontawesome.com/license/free Copyright 2024 Fonticons, Inc.--><path d="M464 256A208 208 0 1 1 48 256a208 208 0 1 1 416 0zM0 256a256 256 0 1 0 512 0A256 256 0 1 0 0 256zM294.6 151.2c-4.2-4.6-10.1-7.2-16.4-7.2C266 144 256 154 256 166.3l0 41.7-96 0c-17.7 0-32 14.3-32 32l0 32c0 17.7 14.3 32 32 32l96 0 0 41.7c0 12.3 10 22.3 22.3 22.3c6.2 0 12.1-2.6 16.4-7.2l84-91c3.5-3.8 5.4-8.7 5.4-13.9s-1.9-10.1-5.4-13.9l-84-91z"/></svg>
				</a>
			{% endif %}

			{# {% if last is defined and current != last %}
				<a href="{{ path(route, query|merge({(pageParameterName): last})) }}" aria-label="Dernière page">
					<span class="bg-[#f95652] text-indigo-600 px-3 py-2 text-lg hover:text-black">
						⏩
					</span>
				</a>
			{% endif %} #}
		</div>
	</div>
{% endif %}