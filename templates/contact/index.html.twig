{% extends 'base.html.twig' %}

{% block title %}Contact
{% endblock %}

{% block body %}
	<main class="lg:h-[85vh]">
		<h1 class="text-4xl text-white underline  underline-offset-8 p-6">Contact</h1>
		<section class="flex flex-col rounded-2xl border-2 border-[#e58f28]  lg:w-[40vw]  container lg:mx-auto lg:m-8  shadow shadow-[0_10px_45px_0px_rgba(255,255,255,0.6)]">
			{{ form_start(form) }}
			<div class="flex flex-col p-6 relative">
				{{ form_row(form.text, {
        label: 'Votre Message ...  ',
        label_attr: {'class': 'text-[#e58f28] underline underline-offset-8'},
        attr: {
            'class': 'flex flex-col m-6 bg-[#2e2e2e] p-4 text-white w-[80%]  mx-auto',
            'rows': '8' 
        }
    }) }}
    <div class="flex max-sm:flex-col gap-4 lg:justify-center m-4 p-4">
    {{ form_row(form.email, {
        label: 'Email : ',
         label_attr: {'class': 'text-[#e58f28] underline underline-offset-8 mx-4'},
    })}}
    {{ form_row(form.tel, {
         label: 'Téléphone : ',
         label_attr: {'class': 'text-[#e58f28] underline underline-offset-8 mx-4'},
    })}}
    </div>
				<button type="submit" class="btn border-2 rounded-2xl bg-[#e58f28] max-w-[5em] lg:absolute bottom-5 right-10 px-2">Envoyer</button>
			</div>
			{{ form_end(form) }}
		</section>

	</main>
{% endblock %}
