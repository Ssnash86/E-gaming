{% extends 'base.html.twig' %}

{% block title %}Description de jeux
{% endblock %}

{% block style %}
	<link rel="stylesheet" href="{{ asset('styles/carousel_desc.css') }}">
{% endblock %}
{% block body %}
	<main class="lg:w-[80vw] w-[90vw] mx-auto container">
		<section>
			<div class="f-carousel mt-[4em]   rounded-2xl " id="myCarousel">
				<div class="f-carousel__viewport ">
					<div class="f-carousel__track  ">
						{% for img in jeux.imgjeuxes %}
							<div class="f-carousel__slide  ">
								<a href="">
									<img class="h-full w-full rounded-2xl " src="{{ asset('./img/' ~ img.img) }}" alt="">
								</a>
							</div>
						{% endfor %}
					</div>
				</div>
			</div>
		</section>
		<section class=" rounded-2xl border-t-2 mt-[5%] w-[full] shadow-2xl shadow-[0_10px_90px_0px_rgba(255,255,255,0.6)] "></section>
		<section class="text-white flex flex-col gap-8">
			<h1 class="uppercase text-4xl text-white underline mt-16 underline-offset-8 ">{{jeux.nom}}</h1>
			<div class="container mx-auto lg:max-w-[60%] pt-8 ">
				<p id="p_description" class="text-xl text-center underline-offset-8 shadow-2xl shadow-inner-[0_10px_90px_0px_rgba(255,255,255,0.6)]  ">{{jeux.informationjeux.descriptionjeux}}</p>
			</div>
		</section>
		<section class="border-2 rounded-2xl  mt-8 text-white ">
			{% for player in jeux.informationJeux.player %}
				<section class="flex justify-between  mr-4">
					<section>
						<h5 class="p-4 text-xl text-white text-bold underline underline-offset-8">Information de
							{{jeux.nom}}
							:</h5>
					</section>
					<section class="flex">
						<div class="flex items-center max-sm:flex-col ">
							<img src="{{ asset('./assets/ico_soloplayer.png') }}" alt="" class=" h-6 m-2">
							<p>
								<span class="{{ player.solo ? 'svg-green' : 'svg-red' }}">
									{% if player.solo %}
										<svg class="h-6 fill-[#e58f28]" viewbox="0 0 512 512"><path d="M256 48a208 208 0 1 1 0 416 208 208 0 1 1 0-416zm0 464A256 256 0 1 0 256 0a256 256 0 1 0 0 512zM369 209c9.4-9.4 9.4-24.6 0-33.9s-24.6-9.4-33.9 0l-111 111-47-47c-9.4-9.4-24.6-9.4-33.9 0s-9.4 24.6 0 33.9l64 64c9.4 9.4 24.6 9.4 33.9 0L369 209z"/></svg>
									{% else %}
										<svg class="h-6 fill-[#e58f28]" viewbox="0 0 512 512"><path d="M256 48a208 208 0 1 1 0 416 208 208 0 1 1 0-416zm0 464A256 256 0 1 0 256 0a256 256 0 1 0 0 512zM175 175c-9.4 9.4-9.4 24.6 0 33.9l47 47-47 47c-9.4 9.4-9.4 24.6 0 33.9s24.6 9.4 33.9 0l47-47 47 47c9.4 9.4 24.6 9.4 33.9 0s9.4-24.6 0-33.9l-47-47 47-47c9.4-9.4 9.4-24.6 0-33.9s-24.6-9.4-33.9 0l-47 47-47-47c-9.4-9.4-24.6-9.4-33.9 0z"/></svg>
									{% endif %}
								</span>
							</p>
						</div>
						<div class="flex items-center max-sm:flex-col ">
							<img src="{{ asset('./assets/ico_duoplayer.png') }}" alt="" class=" h-6 m-2">
							<p>
								<span class="{{ player.duo ? 'svg-green' : 'svg-red' }}">
									{% if player.duo %}
										<svg class="h-6 fill-[#e58f28]" viewbox="0 0 512 512"><path d="M256 48a208 208 0 1 1 0 416 208 208 0 1 1 0-416zm0 464A256 256 0 1 0 256 0a256 256 0 1 0 0 512zM369 209c9.4-9.4 9.4-24.6 0-33.9s-24.6-9.4-33.9 0l-111 111-47-47c-9.4-9.4-24.6-9.4-33.9 0s-9.4 24.6 0 33.9l64 64c9.4 9.4 24.6 9.4 33.9 0L369 209z"/></svg>
									{% else %}
										<svg class="h-6 fill-[#e58f28]" viewbox="0 0 512 512"><path d="M256 48a208 208 0 1 1 0 416 208 208 0 1 1 0-416zm0 464A256 256 0 1 0 256 0a256 256 0 1 0 0 512zM175 175c-9.4 9.4-9.4 24.6 0 33.9l47 47-47 47c-9.4 9.4-9.4 24.6 0 33.9s24.6 9.4 33.9 0l47-47 47 47c9.4 9.4 24.6 9.4 33.9 0s9.4-24.6 0-33.9l-47-47 47-47c9.4-9.4 9.4-24.6 0-33.9s-24.6-9.4-33.9 0l-47 47-47-47c-9.4-9.4-24.6-9.4-33.9 0z"/></svg>
									{% endif %}
								</span>
							</p>
						</div>
						<div class="flex items-center max-sm:flex-col ">
							<img src="{{ asset('./assets/ico_multiplayer.png') }}" alt="" class=" h-6 m-2">
							<p>
								<span class="{{ player.multi ? 'svg-green' : 'svg-red' }}">
									{% if player.multi %}
										<svg class="h-6 fill-[#e58f28]" viewbox="0 0 512 512"><path d="M256 48a208 208 0 1 1 0 416 208 208 0 1 1 0-416zm0 464A256 256 0 1 0 256 0a256 256 0 1 0 0 512zM369 209c9.4-9.4 9.4-24.6 0-33.9s-24.6-9.4-33.9 0l-111 111-47-47c-9.4-9.4-24.6-9.4-33.9 0s-9.4 24.6 0 33.9l64 64c9.4 9.4 24.6 9.4 33.9 0L369 209z"/></svg>
									{% else %}
										<svg class="h-6 fill-[#e58f28]" viewbox="0 0 512 512"><path d="M256 48a208 208 0 1 1 0 416 208 208 0 1 1 0-416zm0 464A256 256 0 1 0 256 0a256 256 0 1 0 0 512zM175 175c-9.4 9.4-9.4 24.6 0 33.9l47 47-47 47c-9.4 9.4-9.4 24.6 0 33.9s24.6 9.4 33.9 0l47-47 47 47c9.4 9.4 24.6 9.4 33.9 0s9.4-24.6 0-33.9l-47-47 47-47c9.4-9.4 9.4-24.6 0-33.9s-24.6-9.4-33.9 0l-47 47-47-47c-9.4-9.4-24.6-9.4-33.9 0z"/></svg>
									{% endif %}
								</span>
							</p>
						</div>
					</section>
				</section>
			{% endfor %}
			<section class="flex max-sm:flex-col justify-between">
				<section class="flex flex-col ">
					<section class="m-4">
						<p>Date de parrution :
							<span class="text-[#e58f28]">{{jeux.informationjeux.dateparution |date("d/m/Y")}}</span>
						</p>
					</section>
					<section class="m-4">
						<p>Editeur :
							<span class="text-[#e58f28] uppercase">
								{{jeux.informationjeux.studio}}</span>
						</p>
					</section>
					<section class="flex max-sm:flex-col gap-2 m-4">
						<p>
							Plateformes :</p>
						{% for plateforme in jeux.informationJeux.plateformes %}
							<section class="flex gap-6">
								<div class="flex items-center gap-2 ">
									<svg class="h-6 fill-white" viewbox="0 0 512 512"><path d="M369.9 318.2c44.3 54.3 64.7 98.8 54.4 118.7-7.9 15.1-56.7 44.6-92.6 55.9-29.6 9.3-68.4 13.3-100.4 10.2-38.2-3.7-76.9-17.4-110.1-39C93.3 445.8 87 438.3 87 423.4c0-29.9 32.9-82.3 89.2-142.1 32-33.9 76.5-73.7 81.4-72.6 9.4 2.1 84.3 75.1 112.3 109.5zM188.6 143.8c-29.7-26.9-58.1-53.9-86.4-63.4-15.2-5.1-16.3-4.8-28.7 8.1-29.2 30.4-53.5 79.7-60.3 122.4-5.4 34.2-6.1 43.8-4.2 60.5 5.6 50.5 17.3 85.4 40.5 120.9 9.5 14.6 12.1 17.3 9.3 9.9-4.2-11-.3-37.5 9.5-64 14.3-39 53.9-112.9 120.3-194.4zm311.6 63.5C483.3 127.3 432.7 77 425.6 77c-7.3 0-24.2 6.5-36 13.9-23.3 14.5-41 31.4-64.3 52.8C367.7 197 427.5 283.1 448.2 346c6.8 20.7 9.7 41.1 7.4 52.3-1.7 8.5-1.7 8.5 1.4 4.6 6.1-7.7 19.9-31.3 25.4-43.5 7.4-16.2 15-40.2 18.6-58.7 4.3-22.5 3.9-70.8-.8-93.4zM141.3 43C189 40.5 251 77.5 255.6 78.4c.7 .1 10.4-4.2 21.6-9.7 63.9-31.1 94-25.8 107.4-25.2-63.9-39.3-152.7-50-233.9-11.7-23.4 11.1-24 11.9-9.4 11.2z"/></svg>
									<p>
										<span class="{{ plateforme.xbox ? 'svg-green' : 'svg-red' }}">
											{% if plateforme.xbox %}
												<svg class="h-6 fill-[#e58f28]" viewbox="0 0 512 512"><path d="M256 48a208 208 0 1 1 0 416 208 208 0 1 1 0-416zm0 464A256 256 0 1 0 256 0a256 256 0 1 0 0 512zM369 209c9.4-9.4 9.4-24.6 0-33.9s-24.6-9.4-33.9 0l-111 111-47-47c-9.4-9.4-24.6-9.4-33.9 0s-9.4 24.6 0 33.9l64 64c9.4 9.4 24.6 9.4 33.9 0L369 209z"/></svg>
											{% else %}
												<svg class="h-6 fill-[#e58f28]" viewbox="0 0 512 512"><path d="M256 48a208 208 0 1 1 0 416 208 208 0 1 1 0-416zm0 464A256 256 0 1 0 256 0a256 256 0 1 0 0 512zM175 175c-9.4 9.4-9.4 24.6 0 33.9l47 47-47 47c-9.4 9.4-9.4 24.6 0 33.9s24.6 9.4 33.9 0l47-47 47 47c9.4 9.4 24.6 9.4 33.9 0s9.4-24.6 0-33.9l-47-47 47-47c9.4-9.4 9.4-24.6 0-33.9s-24.6-9.4-33.9 0l-47 47-47-47c-9.4-9.4-24.6-9.4-33.9 0z"/></svg>
											{% endif %}
										</span>
									</p>
								</div>
								<div class="flex items-center gap-2 ">
									<svg class="h-6 fill-white" viewbox="0 0 576 512"><path d="M570.9 372.3c-11.3 14.2-38.8 24.3-38.8 24.3L327 470.2v-54.3l150.9-53.8c17.1-6.1 19.8-14.8 5.8-19.4-13.9-4.6-39.1-3.3-56.2 2.9L327 381.1v-56.4c23.2-7.8 47.1-13.6 75.7-16.8 40.9-4.5 90.9 .6 130.2 15.5 44.2 14 49.2 34.7 38 48.9zm-224.4-92.5v-139c0-16.3-3-31.3-18.3-35.6-11.7-3.8-19 7.1-19 23.4v347.9l-93.8-29.8V32c39.9 7.4 98 24.9 129.2 35.4C424.1 94.7 451 128.7 451 205.2c0 74.5-46 102.8-104.5 74.6zM43.2 410.2c-45.4-12.8-53-39.5-32.3-54.8 19.1-14.2 51.7-24.9 51.7-24.9l134.5-47.8v54.5l-96.8 34.6c-17.1 6.1-19.7 14.8-5.8 19.4 13.9 4.6 39.1 3.3 56.2-2.9l46.4-16.9v48.8c-51.6 9.3-101.4 7.3-153.9-10z"/></svg>
									<p>
										<span class="{{ plateforme.ps4 ? 'svg-green' : 'svg-red' }}">
											{% if plateforme.ps4 %}
												<svg class="h-6 fill-[#e58f28]" viewbox="0 0 512 512"><path d="M256 48a208 208 0 1 1 0 416 208 208 0 1 1 0-416zm0 464A256 256 0 1 0 256 0a256 256 0 1 0 0 512zM369 209c9.4-9.4 9.4-24.6 0-33.9s-24.6-9.4-33.9 0l-111 111-47-47c-9.4-9.4-24.6-9.4-33.9 0s-9.4 24.6 0 33.9l64 64c9.4 9.4 24.6 9.4 33.9 0L369 209z"/></svg>
											{% else %}
												<svg class="h-6 fill-[#e58f28]" viewbox="0 0 512 512"><path d="M256 48a208 208 0 1 1 0 416 208 208 0 1 1 0-416zm0 464A256 256 0 1 0 256 0a256 256 0 1 0 0 512zM175 175c-9.4 9.4-9.4 24.6 0 33.9l47 47-47 47c-9.4 9.4-9.4 24.6 0 33.9s24.6 9.4 33.9 0l47-47 47 47c9.4 9.4 24.6 9.4 33.9 0s9.4-24.6 0-33.9l-47-47 47-47c9.4-9.4 9.4-24.6 0-33.9s-24.6-9.4-33.9 0l-47 47-47-47c-9.4-9.4-24.6-9.4-33.9 0z"/></svg>
											{% endif %}
										</span>
									</p>
								</div>
								<div class="flex items-center gap-2">
									<svg class="h-6 fill-white" viewbox="0 0 576 512"><path d="M64 0C28.7 0 0 28.7 0 64L0 352c0 35.3 28.7 64 64 64l176 0-10.7 32L160 448c-17.7 0-32 14.3-32 32s14.3 32 32 32l256 0c17.7 0 32-14.3 32-32s-14.3-32-32-32l-69.3 0L336 416l176 0c35.3 0 64-28.7 64-64l0-288c0-35.3-28.7-64-64-64L64 0zM512 64l0 224L64 288 64 64l448 0z"/></svg>
									<p>
										<span class="{{ plateforme.ps4 ? 'svg-green' : 'svg-red' }}">
											{% if plateforme.pc %}
												<svg class="h-6 fill-[#e58f28]" viewbox="0 0 512 512"><path d="M256 48a208 208 0 1 1 0 416 208 208 0 1 1 0-416zm0 464A256 256 0 1 0 256 0a256 256 0 1 0 0 512zM369 209c9.4-9.4 9.4-24.6 0-33.9s-24.6-9.4-33.9 0l-111 111-47-47c-9.4-9.4-24.6-9.4-33.9 0s-9.4 24.6 0 33.9l64 64c9.4 9.4 24.6 9.4 33.9 0L369 209z"/></svg>
											{% else %}
												<svg class="h-6 fill-[#e58f28]" viewbox="0 0 512 512"><path d="M256 48a208 208 0 1 1 0 416 208 208 0 1 1 0-416zm0 464A256 256 0 1 0 256 0a256 256 0 1 0 0 512zM175 175c-9.4 9.4-9.4 24.6 0 33.9l47 47-47 47c-9.4 9.4-9.4 24.6 0 33.9s24.6 9.4 33.9 0l47-47 47 47c9.4 9.4 24.6 9.4 33.9 0s9.4-24.6 0-33.9l-47-47 47-47c9.4-9.4 9.4-24.6 0-33.9s-24.6-9.4-33.9 0l-47 47-47-47c-9.4-9.4-24.6-9.4-33.9 0z"/></svg>
											{% endif %}
										</span>
									</p>
								</div>
							</section>
						{% endfor %}
					</section>
				</section>
				<section class="lg:w-[30%]">
					<div class="bg-[#e58f28] gap-8 p-4 flex  justify-center items-center border-y-2 border-l-2 border-color-white rounded-l-lg">
						{% if jeux.reduction != 0 %}
							<div class="flex ">
								<p class="text-4xl text-[#e58f28] p-4 bg-white rounded-full">
									{{jeux.reduction}}</p>
								<p class="text-white text-xl">%</p>
							</div>
						{% endif %}
						<p class="text-bold ">Prix :
							{{(jeux.prix * (1 - (jeux.reduction / 100)))|number_format(2)}}
							€</p>
						{% if jeux.informationJeux.stocks > 0 %}
							<div class="flex flex-col gap-2">
								<a class="rounded-2xl border-2 border-color-white p-4" href="{{path('app_panier_add' , {'id':jeux.id})}}">Acheter</a>
							</div>
						{% else %}
							<div class=" flex flex-col items-center">
								<svg class=" h-8 w-8 fill-white" viewbox="0 0 512 512"><path d="M367.2 412.5L99.5 144.8C77.1 176.1 64 214.5 64 256c0 106 86 192 192 192c41.5 0 79.9-13.1 111.2-35.5zm45.3-45.3C434.9 335.9 448 297.5 448 256c0-106-86-192-192-192c-41.5 0-79.9 13.1-111.2 35.5L412.5 367.2zM0 256a256 256 0 1 1 512 0A256 256 0 1 1 0 256z"/></svg>
								<p>En rupture de stock</p>
							</div>
						{% endif %}
					</div>
					<div class=" flex justify-end p-4">
						<p>
							<span class="underline">En stock :</span>
							<span class="text-xl">
								{{jeux.informationJeux.stocks}}</p>
						</p>
					</span>
				</div>
			</section>

		</section>
	</section>
	<section class="flex flex-col ">
		<h3 class="text-xl text-white my-8">Laissez nous votre avis sur
			<span class="text-2xl text-[#e58f28] underline underline-offset-8">{{jeux.nom}}</span>
		</h3>
		<section class="flex flex-col rounded-2xl border-2 border-[#e58f28] lg:w-[40vw] container lg:mx-auto lg:m-8 lg:h-[30vh] shadow shadow-[0_10px_45px_0px_rgba(255,255,255,0.6)]">
			{{ form_start(form) }}
			<div class="flex flex-col p-6 relative">
				{{ form_row(form.texte, {
        label: 'Commentaire : ',
        label_attr: {'class': 'text-[#e58f28] underline underline-offset-8'},
        attr: {
            'class': 'flex flex-col m-6 bg-[#2e2e2e] p-4 text-white w-[80%]  mx-auto',
            'rows': '8' 
        }
    }) }}
				<button type="submit" class="btn border-2 rounded-2xl bg-[#e58f28] max-w-[5em] lg:absolute bottom-0 right-10 px-2">Envoyer</button>
			</div>
			{{ form_end(form) }}
		</section>
		<section class="flex justify-center">
			<button id="btn_voir_commentaire" class="bg-[#e58f28] border-2 flex gap-2 items-center rounded-2xl p-4 text-2xl underline underline-offset-8 text-white shadow shadow-[0_10px_45px_0px_rgba(255,255,255,0.6)] m-6">
				<svg class="h-6 fill-white" viewbox="0 0 320 512"><path d="M137.4 374.6c12.5 12.5 32.8 12.5 45.3 0l128-128c9.2-9.2 11.9-22.9 6.9-34.9s-16.6-19.8-29.6-19.8L32 192c-12.9 0-24.6 7.8-29.6 19.8s-2.2 25.7 6.9 34.9l128 128z"/></svg>
				Voir les commentaires des joueurs<svg class="h-6 fill-white" viewbox="0 0 320 512"><path d="M137.4 374.6c12.5 12.5 32.8 12.5 45.3 0l128-128c9.2-9.2 11.9-22.9 6.9-34.9s-16.6-19.8-29.6-19.8L32 192c-12.9 0-24.6 7.8-29.6 19.8s-2.2 25.7 6.9 34.9l128 128z"/></svg>
			</button>
		</section>
		<section id="commentaire" class="hidden">
			{% for commentaires in commentaire %}
				<section class="  relative rounded-2xl border-2 border-[#e58f28] lg:w-[40vw] container lg:mx-auto lg:m-8 min-h-[20vh] shadow shadow-[0_10px_45px_0px_rgba(255,255,255,0.6)]">
					<div class="text-white text-center p-12 w-[40vw] container mx-auto">
						<p>{{commentaires.texte}}</p>
					</div>
					<div class="absolute inset-x-0 bottom-0 flex justify-end p-4 text-white gap-2 items-center underline underline-offset-8  bottom-0">
						<svg class="fill-[#e58f28] h-5" viewbox="0 0 448 512"><path d="M224 256A128 128 0 1 0 224 0a128 128 0 1 0 0 256zm-45.7 48C79.8 304 0 383.8 0 482.3C0 498.7 13.3 512 29.7 512l388.6 0c16.4 0 29.7-13.3 29.7-29.7C448 383.8 368.2 304 269.7 304l-91.4 0z"/></svg>
						<p>{{commentaires.user.email}}</p>
					</div>
				</section>
			{% endfor %}
		</section>
	</section>
</main>
<script src="{{asset('commentaire.js')}}"></script>{% endblock %}
