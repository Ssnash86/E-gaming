{% extends 'base.html.twig' %}

{% block title %}Réinitialisation mot de passe{% endblock %}

{% block body %}
    {% for flash_error in app.flashes('reset_password_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}
    <main class="lg:h-[85vh]">
		<section id="form_profil" class="  border-2 rounded-2xl container mx-auto lg:w-[40vw]  p-6 mt-[8%] shadow-2xl shadow-[0_10px_90px_0px_rgba(255,255,255,0.6)] ">
    <h1 class="text-4xl text-white underline  underline-offset-8 p-6">Réinitialisation mot de passe</h1>

    {{ form_start(requestForm) }}
        {{ form_label(requestForm.email, "Email :", {'label_attr': {'class': 'uppercase m-4 flex flex-col text-[#e58f28] underline underline-offset-4'}}) }}
        {{ form_widget(requestForm.email) }}
        <div class="flex max-sm:flex-col gap-4 mt-4 items-center">
            <small>
              Entrez votre adresse e-mail et nous vous enverrons un
lien pour réinitialiser votre mot de passe.
            </small> 
            <button class="btn btn-primary  bg-[#e58f28] p-2 rounded">Envoyer un e-mail de réinitialisation du mot de passe</button>
        </div>
       
    {{ form_end(requestForm) }}
    </section>
    </main>
{% endblock %}
